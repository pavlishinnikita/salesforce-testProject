<apex:page renderAs="pdf" controller="CertificateController" showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" applyHtmlTag="false">
    <head>
        <style type="text/css">
            @page {
            	size: a4;
            }
            
            .page-break:first-child {
                page-break-before: avoid;
            }

            .page-break {
            	page-break-before: always;
            }
                        
        	body, html {
            	display: block;
            	font-family: Tahoma	sans-serif;	
                width: 100%;
            	padding: 0;
            	marging: 0;
            }
            
            header.title {
            	display: block;
            	padding 0;
            	margin: auto;
            	background: url('{!$Resource.LogoSertificateSmall}');
            	height: 200px;
            	width: 600px;
            }
        
            .title h1 {
            	text-align: center;
            	display: table-cell;
            	vertical-align: middle;
            	font-size: 7em;
            	font-style: bold;
            	height: inherit;
            	width:inherit;
            }
                       
            .info > div {
            	text-align: center;
            	margin: 0 0 20px 0;
            }
            
            .info__participant {
            	padding-top: 2%;
            	font-size: 3em;
            	width: 100%;
            }
            
            .info__training {
            	font-size: 2.5em;
            }
            
            .info__sub {
            	font-size: 1.5em;
            }
            
            .topic {
            	display:block;
            	height: 300px;
            	width: 100%;
            	margin: 0 0 10% 4%;
            	text-align: center;
            	font-size: 1.5em;
            }
            .topic__main {
            	padding: 0 4% 0 4%;
            	display:inline-block;
            	vertical-align: top;
            }
            
            .topic__detail {
            	text-align: left;
            	height: inherit;
            	padding: 0 0 0 4%;
            	display:inline-block;
            	border-left: 3px solid blue;
            	vertical-align: top;
            }
            
            footer {
            	display:block;
				margin: 10% 0 0 5%;
				width: 90%;            
            }
            
            footer > img {
            }
            
            .sign {
                display: inline-block;
            	width: 30%;
            	text-align: center;
            }
            
            .sign > i {
            	display: block;
            	border-top: 1px solid black;
            }
            
            .sign-trainer {
                display: inline-block;
            	width: 30%;
            	text-align: center;
            }
            
            .sign-trainer > i {
            	display: block;
				border-top: 1px solid black;
            }
            
            .sign-trainer > img {
            	margin: 0;
            	padding: 0;
            	display: block;
            	width: 100%;
            	height: 100%;
            }
            
            .certificate {
            	height: 100%;
            	padding 0;
            	margin 0;
            }
        </style>
    </head>
    <body>
        <apex:repeat value="{!Participants}" var="p">
            <div class="certificate page-break">
                <header class="title">
                    <h1>Certificate</h1>
                </header>
                <div class="info">
                    <div class="info__participant">
                        {!p.Contact_Name__r.FirstName & ' ' & p.Contact_Name__r.LastName}
                    </div>
                    <div class="info__sub">
                        from
                        <apex:outputText value="{0, date, MM'.'dd'.'yyyy}">
                        	<apex:param value="{!p.Training__r.Start_Date__c}"/>
                        </apex:outputText>
                        to
                        <apex:outputText value="{0, date, MM'.'dd'.'yyyy}">
                        	<apex:param value="{!p.Training__r.End_Date__c}"/>
                        </apex:outputText>
                    </div>
                    <div class="info__training">
                        Content-Marketing-Seminar
                        {!p.Training__r.Training_Course__r.Name}
                    </div>
                    <div class="info__sub">
                        in {!p.Training__r.Location__r.Billing_City__c}
                    </div>
                    <div class="info__sub">
                        GPA {!p.GPA__c}
                    </div>
                </div>
                <div class="topic">
                    <div class="topic__main">
                        Main Topics
                    </div>
                    <div class="topic__detail">
                        <div>
                            {!p.Training__r.Training_Course__r.Description__c}
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="sign">
                        <i>Alexandr Holl</i>
                    </div>
                    <img src="{!$Resource.LogoSertificate}" />
                    <div class="sign-trainer">
                        <apex:image rendered="{!IsSignaturePresent}" url="{!signature}" />
                        <i>{!p.Training__r.Trainer__r.FirstName + ' ' + p.Training__r.Trainer__r.LastName }</i>
                    </div>
                </footer>
            </div>
            <!--div class="page-break"></div-->
        </apex:repeat>
    </body>
</apex:page>